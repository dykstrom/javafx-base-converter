<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/10.0.2-internal"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="se.dykstrom.javafx.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <GridPane>
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" minWidth="50.0" prefWidth="200.0"/>
            <ColumnConstraints hgrow="NEVER" minWidth="45.0" prefWidth="30.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="60.0" prefWidth="60.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <TextField fx:id="textField1"/>
        <Label text="Base" GridPane.columnIndex="1" GridPane.halignment="RIGHT">
            <GridPane.margin>
                <Insets right="5.0"/>
            </GridPane.margin>
        </Label>
        <Spinner fx:id="spinner1" editable="true" GridPane.columnIndex="2"/>
        <Label fx:id="errorLabel1" textFill="RED" GridPane.columnSpan="2147483647" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets bottom="10.0"/>
            </GridPane.margin>
        </Label>
        <TextField fx:id="textField2" GridPane.rowIndex="2"/>
        <Label text="Base" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="2">
            <GridPane.margin>
                <Insets right="5.0"/>
            </GridPane.margin>
        </Label>
        <Spinner fx:id="spinner2" editable="true" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
        <Label fx:id="errorLabel2" textFill="RED" GridPane.rowIndex="3">
            <GridPane.margin>
                <Insets bottom="10.0"/>
            </GridPane.margin>
        </Label>
    </GridPane>
</VBox>
